# 数据库配置
DB_HOST=your_db_host
DB_PORT=3306
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# 阿里云OSS配置（如使用OSS存储）
OSS_ACCESS_KEY_ID=your_real_access_key_id
OSS_ACCESS_KEY_SECRET=your_real_access_key_secret
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
OSS_BUCKET_NAME=your_bucket_name

# 应用配置
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key

# 服务端口
BACKEND_PORT=5001
FRONTEND_PORT=8500

# 域名配置
DOMAIN=your_domain
BACKEND_URL=http://your_domain:5001
FRONTEND_URL=http://your_domain:8500

# CORS配置
CORS_ORIGINS=http://your_domain:8500,http://localhost:8500